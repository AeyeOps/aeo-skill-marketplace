{
  "description": "Performance monitoring and cost tracking hooks for Claude Code operations",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Read operation started' >&2",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Command started' >&2",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Read completed' >&2",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "wc -l ${file_path} | awk '{print \"FILE_SIZE,${file_path},\"$1}' >> .claude/metrics.log",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Command completed' >&2",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "git diff --stat ${file_path} | tail -1 | awk '{print \"EDIT_SIZE,${file_path},\"$1\",\"$4\",\"$6}' >> .claude/metrics.log",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'WEB_SEARCH,${query},$(date +%s),COST_UNITS:2' >> .claude/cost_tracking.log",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/calculate_agent_cost.py ${agent_name} ${duration} ${model}",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "echo 'AGENT_COMPLETE,${agent_name},${model},${duration}' >> .claude/agent_metrics.log",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/generate_performance_report.py",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "python scripts/calculate_session_cost.py",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python scripts/identify_bottlenecks.py",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
