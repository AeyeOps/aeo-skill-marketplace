{
  "description": "Performance monitoring and cost tracking hooks for Claude Code operations",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Read operation started' >&2",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Command started' >&2",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
